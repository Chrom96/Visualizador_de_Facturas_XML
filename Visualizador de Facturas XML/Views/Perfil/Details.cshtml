@model Visualizador_de_Facturas_XML.Models.Perfil

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Perfil</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
</div>
<p>
    <a class="btn btn-primary" onclick="openModal('@Url.Action("Edit", new { id = Model?.Id })', 'Edit')" role="button">
        <i class="bi bi-pencil-fill"></i>
    </a>
</p>



<div class="card mt-4">
    <div class="card-header bg-dark text-white">
        <h2>Facturas</h2>
    </div>
    <div class="card-body p-2">
        <div class="table-responsive">
            <table class="table table-sm table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>UUID</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @foreach (var factura in ViewData["Facturas"] as List<Factura>)
                    {
                        <tr>
                            <td>@factura.UUID</td>
                            <td>
                                <a class="btn btn-warning" onclick="openModal('@Url.Action("Edit", "Facturas", new { id = factura.UUID })', 'Editar')" role="button">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a class="btn btn-success" onclick="openModal('@Url.Action("Details", "Facturas", new { id = factura.UUID })', 'Detalles')" role="button">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a class="btn btn-danger" onclick="openModal('@Url.Action("Delete", "Facturas", new { id = factura.UUID })', 'Borrar')" role="button">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>