@model Visualizador_de_Facturas_XML.Models.Factura

@{
    ViewData["Title"] = "Delete";
}
<div>
    <h5>Factura</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UUID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UUID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Perfil)
