@model Visualizador_de_Facturas_XML.Models.Factura

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/css/ModalContetLayout.css" />
<div class="parent">
    <div class="child">
        <h5>Factura</h5>
        <hr />
        <div class="row">
            <form id="formPost" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="XmlContent" class="control-label"></label>
                    <input asp-for="XmlContent" type="file" class="form-control" name="XmlContent" accept=".xml" />
                    <span asp-validation-for="XmlContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PerfilID" class="control-label"></label>
                    <input pattern="\d*" asp-for="PerfilID" class="form-control" type="text" class="form-control mb-3" list="datalistOptions2" id="PerfilID" placeholder="Type to search...">
                    <span asp-validation-for="PerfilID" class="text-danger"></span>
                    <datalist id="datalistOptions2">
                        @foreach (var perfil in ViewData["Perfiles2"] as List<Perfil>)
                        {
                            <option value="@perfil.Id">@perfil.Nombre</option>
                        }
                    </datalist>
                </div>

                <p>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </p>
            </form>

        </div>
    </div>
</div>


<script src="~/js/ValidarNumeros.js" asp-append-version="true"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}